<body>

        <div class="split-screen">
            <div class="left">
                <section class="copy">
                    <h1>Become a G L E A M user today</h1>
                    <p>Donate blood and save lives.</p>
                </section>
            </div>
    
            <div class="right">
               <form>
                    <section class="copy">
                        <h2>Sign Up</h2>
                        <div class="login-container">
                            <p>Already have an account? 
                                <a href="/login">
                                    <strong>Log In</strong>
                                </a>
                            </p>
                        </div>
                    </section>
    
                    <div class="input-container fname">
                        <!-- <label for="fname">Full Name</label> -->
                        <input id="fname" name="fname" placeholder="First Name" type="text">
                    </div>

                    <div class="input-container lname">
                        <!-- <label for="fname">Full Name</label> -->
                        <input id="lname" name="lname" placeholder="Last Name" type="text">
                    </div>
    
                    <div class="input-container email">
                        <!-- <label for="email">Email</label> -->
                        <input id="email" name="email" placeholder="Email" type="email">
                    </div>
    
                    <div class="input-container password">
                        <!-- <label for="password">Password</label> -->
                        <input id="password" name="password" placeholder="Password" type="password">
                        <span class="eye-password" onclick="toggleEyeButtonForPassword()">
                            <i id="hide-eye-password" class="fa fa-eye"></i>
                            <i id="hide-eye-slash-password" class="fa fa-eye-slash"></i>
                        </span>
                    </div>

                    <div class="input-container password">
                        <!-- <label for="password">Confirm Password</label> -->
                        <input id="confirm-password" name="password" placeholder="Confirm Password" type="password">
                        <span class="eye-confirm-password" onclick="toggleEyeButtonForConfirmPassword()">
                            <i id="hide-eye-confirm-password" class="fa fa-eye"></i>
                            <i id="hide-eye-slash-confirm-password" class="fa fa-eye-slash"></i>
                        </span>
                    </div>
    
                    <div class="input-container cta">
                        <label class="checkbox-container">
                            <input type="checkbox">
                            <span class="checkmark"></span>
                            Remember me
                            <a href="#">Forgot Password?</a>
                        </label>
                    </div>
    
                    <button class="signup-btn" type="submit">Sign Up</button>
    
                    <section class="copy legal">
                        <p><span class="small">
                            By continuing, you agree to accept our <br> 
                            <a href="#">Terms and Conditions</a>.
                        </span></p>
                    </section>
               </form>
            </div>
            
    
        </div>

        <script>
            function toggleEyeButtonForPassword(){
                var input = document.getElementById("password");
                var eye = document.getElementById("hide-eye-password");
                var eye_slash = document.getElementById("hide-eye-slash-password");

                if(input.type === 'password'){
                    input.type = "text";
                    eye.style.display = "block";
                    eye_slash.style.display = "none";
                }
                else{
                    input.type = "password";
                    eye.style.display = "none";
                    eye_slash.style.display = "block";
                }
            }

            function toggleEyeButtonForConfirmPassword(){
                var input = document.getElementById("confirm-password");
                var eye = document.getElementById("hide-eye-confirm-password");
                var eye_slash = document.getElementById("hide-eye-slash-confirm-password");

                if(input.type === 'password'){
                    input.type = "text";
                    eye.style.display = "block";
                    eye_slash.style.display = "none";
                }
                else{
                    input.type = "password";
                    eye.style.display = "none";
                    eye_slash.style.display = "block";
                }
            }
        </script>

        
      









