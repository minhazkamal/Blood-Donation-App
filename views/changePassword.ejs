<!DOCTYPE html>
<html lang="en">


<!-- register24:03-->

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="/img/Logo-01.png">
    <title>Change Password - G L E A M</title>
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/css/resetPassword.css">
    
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <!--[if lt IE 9]>
		<script src="assets/js/html5shiv.min.js"></script>
		<script src="assets/js/respond.min.js"></script>
	<![endif]-->
</head>

<body>
    <div style="display: none;" id="user">
        <input id="is-changable" type="text" value="<%= is_changable %>">
    </div>


    <div class="bg-modal">

        <div class="modal-contents">

            <h1>Change Password</h1>
            <p>Please enter a new password. It should not match with the old password.</p>
            <form method="POST">
                <div class="alert alert-warning alert-dismissible fade show" role="alert" id="not-changable">
                    You are not able to change your password. You are not self registered.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <fieldset id="form-fields">
                    <!-- Alert Message -->
                    <% if(typeof alert !='undefined' ) { %>
                        <% alert.forEach(function(error) { %>
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                <%= error.msg %>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                            </div>
                            <% }) %>
                                <% } %>

                                    <div class="input-container password">
                                        <!-- <label for="password">Password</label> -->
                                        <input id="old-password" name="old_password" placeholder="Previous Password"
                                            type="password" pattern=".{6,}" required title="6 characters minimum">
                                        <span class="eye-password" onclick="toggleEyeButtonForOldPassword()">
                                            <i id="hide-eye-old-password" class="fa fa-eye"></i>
                                            <i id="hide-eye-slash-old-password" class="fa fa-eye-slash"></i>
                                        </span>
                                    </div>

                                    <div class="input-container password">
                                        <!-- <label for="password">Password</label> -->
                                        <input id="password" name="password" placeholder="New Password" type="password"
                                            pattern=".{6,}" required title="6 characters minimum">
                                        <span class="eye-password" onclick="toggleEyeButtonForPassword()">
                                            <i id="hide-eye-password" class="fa fa-eye"></i>
                                            <i id="hide-eye-slash-password" class="fa fa-eye-slash"></i>
                                        </span>
                                    </div>

                                    <div class="input-container password">
                                        <!-- <label for="password">Confirm Password</label> -->
                                        <input id="confirm-password" name="confirm_password"
                                            placeholder="Confirm New Password" type="password" required>
                                        <span class="eye-confirm-password"
                                            onclick="toggleEyeButtonForConfirmPassword()">
                                            <i id="hide-eye-confirm-password" class="fa fa-eye"></i>
                                            <i id="hide-eye-slash-confirm-password" class="fa fa-eye-slash"></i>
                                        </span>
                                    </div>
                                    <button class="signup-btn" type="submit">Change Password</button>
                </fieldset>
            </form>

            <div class="login-container">
                <span>Don't want to change the password?</span>
                <a href="/dashboard">
                    <!-- <i class="fa fa-arrow-left" aria-hidden="true"></i> -->
                    <strong>Dashboard</strong>
                </a>

            </div>
        </div>


    </div>


    <script>
        $(document).ready(function () {
            // console.log($('#is-changable').val());
            if ($('#is-changable').val() == 'yes') {
                $('#not-changable').hide();
            }
            else {
                document.getElementById('form-fields').disabled = true;
            }
        });
        function toggleEyeButtonForPassword() {
            var input = document.getElementById("password");
            var eye = document.getElementById("hide-eye-password");
            var eye_slash = document.getElementById("hide-eye-slash-password");

            if (input.type === 'password') {
                input.type = "text";
                eye.style.display = "block";
                eye_slash.style.display = "none";
            }
            else {
                input.type = "password";
                eye.style.display = "none";
                eye_slash.style.display = "block";
            }
        }

        function toggleEyeButtonForConfirmPassword() {
            var input = document.getElementById("confirm-password");
            var eye = document.getElementById("hide-eye-confirm-password");
            var eye_slash = document.getElementById("hide-eye-slash-confirm-password");

            if (input.type === 'password') {
                input.type = "text";
                eye.style.display = "block";
                eye_slash.style.display = "none";
            }
            else {
                input.type = "password";
                eye.style.display = "none";
                eye_slash.style.display = "block";
            }
        }

        function toggleEyeButtonForOldPassword() {
            var input = document.getElementById("old-password");
            var eye = document.getElementById("hide-eye-old-password");
            var eye_slash = document.getElementById("hide-eye-slash-old-password");

            if (input.type === 'password') {
                input.type = "text";
                eye.style.display = "block";
                eye_slash.style.display = "none";
            }
            else {
                input.type = "password";
                eye.style.display = "none";
                eye_slash.style.display = "block";
            }
        }
    </script>


    <script src="assets/js/jquery-3.2.1.min.js"></script>
    <script src="assets/js/popper.min.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
        crossorigin="anonymous"></script>
</body>


